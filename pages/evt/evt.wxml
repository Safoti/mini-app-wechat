<!--pages/evt/evt.wxml-->
<text>07-事件学习</text>
<view>{{count}}</view>
<button type="primary" bindtap="btnHandler">按钮事件</button>
<text>按钮传参练习</text>
<button type="primary" bindtap="CountAddHandler">+1</button>


<!-- 小程序不能同事处理事件函数传递餐数 -->
<text>事件并且传参练习</text>
<!-- info会被解析成参数的名字，2会被解析成餐数的值 -->
<button type="primary" bindtap="ParamTest" data-info="{{2}}">count + 2</button>


<text>文本框事件练习</text>

请输入：<input bindinput="inputHandlers"></input>



<text>文本框与data之间数据同步练习</text>
<input value="{{msg}}" bindinput="dataHandlers"></input>


<view>随时显示msg的值为:{{msg}}</view>